/* TABLET - PORTRAIT */
@media only screen and (max-width: 800px) {
    .calendar-date {
        padding-top: 40px
    }

    .vlist-preview-wrapper {
        top: 84px !important;
    }

    .filtered .vlist-preview-wrapper {
        top: 125px !important;
    }

    .recycle-day-wrapper .calendar-date {
        padding-top: 0
    }

    .calendar-date .calendar-option.separator-responsive {
        width: 100% !important;
    }

    .calendar-date .calendar-option.calendar-label-date {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
    }

    .overlay-arrow-icon {
        display: none
    }

    .library .overlay-arrow-icon {
        display: block
    }

    .alert-window {
        width: 90%;
    }

    .library .alert-window {
        top: 190px
    }

    .library .overlay-arrow-icon {
        top: 110px;
    }

    .cameras-filter-header {
        width: 70% !important;
    }

    .calendar-vlist .vlist-preview {
        width: 50%;
    }

    .settings-bs-buttons button {
        display: block;
        margin: auto;
        margin-top: 20px;
    }

    .settings-bs-buttons button:first-child {
        margin-top: 0px;
    }
}

@media only screen and (max-width: 640px) {
    .calendar-date .calendar-option button {
        padding-left: 10px !important;
        padding-right: 10px !important;
    }

    .alert-window .footer-button {
        padding-left: 5px;
        min-width: 50px
    }

    .cameras-filter-header {
        width: 60% !important;
    }
}

/* PHONE - PORTRAIT */
@media only screen and (max-width: 567px) {
    .library.modal-overlay {
        display: none
    }

    .calendar-wrapper {
        overflow-y: auto !important;
    }

    .recycle-day-wrapper,
    .vlist-preview-wrapper {
        top: 0 !important;
        position: relative !important;
        overflow: visible !important;
    }

    .filtered .vlist-preview-wrapper {
        top: 0px !important;
    }

    .recycle-container {
        top: 0 !important;
        position: relative !important
    }

    .calendar-date .calendar-option.calendar-label-date {
        height: 60px;
        line-height: 60px;
        position: relative;
        width: auto
    }

    .camera {
        width: 100%;
    }

    body .calendar-vlist {
        position: static;
    }

    body .calendar {
        position: static;
        margin: 0 auto;
        width: 285px;
        box-shadow: none;
    }

    .calendar-vlist .vlist-preview {
        width: 100%;
    }
}

@media only screen and (max-width: 400px) {
    .calendar-date {
        padding-top: 40px
    }
}

@media only screen and (orientation: landscape) {
    .camera-fullscreen {
        width: 100%;
        width: calc(1.7778 * (100vh - 190px));
        max-width: 100%;
    }
}

@media only screen and (orientation: portrait) {
    .camera-fullscreen {
        width: 100%;
    }
}

