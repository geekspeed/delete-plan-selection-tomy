/* Camera */
.camera {
    display: inline-block;
    width: 449px;
    padding: 8px;
    text-align: left;
    overflow: hidden;
    vertical-align: top;
}

.vlist-preview {
    width: 170px;
}

/* TABLET - PORTRAIT */
@media only screen and (max-width: 1023px) {
    .camera {
        width: 49%;
    }

    .calendar-vlist .vlist-preview {
        width: 33%;
    }
}

