<div class="main" ng-init="init()" ng-controller="PersonalInfoCtrl">

    <header>
        <div style="margin-left:auto;margin-right:auto" class="button-group">
            <button class="button small" style="float:left;background-color:#FFFFFF;color:#000000" ng-click="cancel()">{{'activity_cancel' | i18n}}</button>
            <span style="text-align:center;float:none;margin-left:auto;margin-right:auto;font-size:2.5em">Personal Information</span>
            <button class="button small" style="float:right;" ng-click="done()" >{{'activity_done' | i18n}}</button>
        </div>
    </header>



    <fieldset >
        <div class="row panel">
            <div class="large-12">
                <label>User ID</label>
                <input type="text" placeholder="User ID">
            </div>
            <div class="large-12">
                <label>Current Password</label>
                <input type="password" placeholder="Password">
            </div>
        </div>

        <div class="row panel">
            <div class="large-12">
                <label>New Password</label>
                <input type="text" placeholder="User ID">
            </div>
            <div class="large-12">
                <label>Retype New Password</label>
                <input type="password" placeholder="Password">
            </div>
        </div>

        <div class="row panel">
            <div class="large-12">
                <label>First Name</label>
                <input type="text" value="{{firstName}}" placeholder="First Name">
            </div>
            <div class="large-12">
                <label>Last Name</label>
                <input type="text" placeholder="Last Name">
            </div>
        </div>
    </fieldset>
    </form>

</div>